@model Demo_v2.Models.Categoria

@{
    ViewBag.Title = "Search";    
}

<script type="text/javascript">
    var cosas = new Array();
</script>
@for (int i = 0; i < Model.Lugar.Count; i++)
{
    if (Model.Lugar[i].isSala)
    {
        continue;
    }
    
    string nombre = Model.Lugar[i].Nombre;
    <script type="text/javascript">
        cosas[@i] = "@nombre";
    </script>
}

<!--TODO ESTARÁ BIEN MIENTRAS EXISTA LA VARIABLE cosas-->
<br /><br /><br />
<center><h2>Buscando resultados para @Model.Nombre</h2></center>


<div style="height:250px; width:200px; overflow-y:scroll;float:left;margin-left:300px; font-size:medium">
    <ol>
    @foreach (var lugar in @Model.Lugar)
    {
        <li>@Html.ActionLink(lugar.Nombre, "Details", new {idLugar = lugar.Id})</li>
    }
    </ol>
</div>

<div id="container" style="left:5%"></div>
