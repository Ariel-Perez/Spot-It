@{
    ViewBag.Title = "Index";
}

<h1>Buscador de Salas Vacías</h1>


<div style="width:40%;float:left">
	<h2>Seleccione los horarios en que necesita la sala</h2>
    <br />
	<table >
		<tr>
			<th>Horario</th>
			<th>L</th>
			<th>M</th>
			<th>W</th>
			<th>J</th>
			<th>V</th>
			<th>S</th>
		</tr>
        @{
            string[] horarios = new string[]
            {
                "08.30-09.50",
                "10.00-11.20",
                "11.30-12.50",
                "12.50-14.00",
                "14.00-15.20",
                "15.30-16.50",
                "17.00-18.20",
                "18.30-19.50",
                "20.00-21.20"  
            };
        }
        @for (int i = 1; i <= 9; i++)
        {
            <tr>
                <td style="text-align:center; vertical-align:middle">@horarios[i - 1]</td>
                
                @if (i != 4)
                {
                    for (int j = 1; j <= 6; j++)
                    {
                        <td style="text-align:center; vertical-align:middle"><input type="checkbox" name="modulo"/></td>
                    }
                }
                else
                {
                    <td colspan="6" style="text-align:center;vertical-align:middle">A L M U E R Z O</td>
                }
            </tr>
        }
	</table>
	<br />
</div>
<div style="width:50%;float:left">
	<h2>Seleccione preferencias para la sala</h2>
    <br />
	<h3>Capacidad:</h3>
	<h3>Ubicación:</h3>
</div>